<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/color_picker_dialog_grid_view_margin"
        android:columnWidth="@dimen/color_picker_dialog_item_size"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/color_picker_dialog_item_space"
        android:horizontalSpacing="@dimen/color_picker_dialog_item_space"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />
</LinearLayout>