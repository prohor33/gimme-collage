<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="crystal.games.gimmecollage.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FriendPicker"
            android:label="@string/title_activity_friend_picker"
            android:parentActivityName="crystal.games.gimmecollage.app.MainActivity">
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="crystal.games.gimmecollage.app.MainActivity" />
        </activity>
        <activity
            android:name=".ImageProcessor"
            android:label="@string/title_activity_image_processor">
            android:parentActivityName="crystal.games.gimmecollage.app.FriendPicker">
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="crystal.games.gimmecollage.app.FriendPicker" />
        </activity>
    </application>

</manifest>
